
@model Usuario



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <img src="~/dist/img/logo_bravoizquierdo.jpg" alt="Descripción de la imagen" class="img-thumbnail">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">

            <div class="card-header text-center">
                <a href="~/index.html" class="h1"><b>Login </b>DHR</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Credenciales</p>

                <form method="post" asp-action="Login" asp-controller="Usuarios">
                <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email" required asp-asp-for="Correo" name="Correo">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" required asp-asp-for="Contrasena" name="Contrasena">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                 <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" asp-for="MantenerActivo">
                            <label for="remember">
                                Recordarme en este equipo
                            </label>
                        </div>
                </div> 
                <div class="row">

                    <!-- /.col -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-block btn-danger btn-lg">Sign In</button>
                        
@*                         <a href="pages/DHR_Pages/Listaracta.html" class="btn btn-block btn-danger btn-lg">Sign In</a>
 *@
                    </div>
                        <label class="alert-danger">@ViewBag.Error</label>
                    <!-- /.col -->
                </div>

                </form>

                <!--</form>-->
                <p class="mb-1">
                    <a href="pages/DHR_Pages/passwordForget.html">Recuperar contrasena </a>
                    <a href="index.html" hidden> index </a>
@*                     <a asp-controller="Especialidads" asp-action="Index" class="btn btn-primary">Crear Especialidads</a>
                    <a asp-controller="FechaCierres" asp-action="Index" class="btn btn-primary">Crear FechaCierres</a>
                    <a asp-controller="Obras" asp-action="Index" class="btn btn-primary">Crear Obras</a>
                    <a asp-controller="RazonSocials" asp-action="Index" class="btn btn-primary">Crear RazonSocials</a>
                    <a asp-controller="Actums" asp-action="Index" class="btn btn-primary">Crear Actums</a> *@

                </p>
                <!-- /.social-auth-links -->

            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </div>



    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>

</body>
</html>