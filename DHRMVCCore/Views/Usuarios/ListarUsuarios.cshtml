    <script>
        function cambiarEstado(elemento) {
            if (elemento.innerHTML === "Habilitado") {
                elemento.innerHTML = "Inhabilitado";
                elemento.classList.remove("habilitado");
                elemento.classList.add("inhabilitado");
            } else {
                elemento.innerHTML = "Habilitado";
                elemento.classList.remove("inhabilitado");
                elemento.classList.add("habilitado");
            }
        }


    </script>


